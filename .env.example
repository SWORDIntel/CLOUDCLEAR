# CloudUnflare Enhanced v2.0 - Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# Build Configuration
BUILD_DATE=2024-09-19T16:00:00Z
BUILD_VERSION=2.0-Enhanced
DOCKER_REGISTRY=your-registry.com/cloudunflare

# Application Configuration
CLOUDUNFLARE_MAX_THREADS=50
CLOUDUNFLARE_DNS_TIMEOUT=30
CLOUDUNFLARE_HTTP_TIMEOUT=45
CLOUDUNFLARE_OPSEC_MODE=1
CLOUDUNFLARE_LOG_LEVEL=1
CLOUDUNFLARE_PERFORMANCE_MODE=1

# Advanced DNS Configuration
CLOUDUNFLARE_DNS_FALLBACK_ENABLED=1
CLOUDUNFLARE_DOH_ENABLED=1
CLOUDUNFLARE_DOQ_ENABLED=1
CLOUDUNFLARE_DOT_ENABLED=1
CLOUDUNFLARE_IPV6_ENABLED=1

# Threading and Performance
CLOUDUNFLARE_THREAD_POOL_SIZE=50
CLOUDUNFLARE_CONNECTION_POOL_SIZE=20
CLOUDUNFLARE_MEMORY_LIMIT_MB=512
CLOUDUNFLARE_CPU_AFFINITY_ENABLED=1

# OPSEC and Security Settings
CLOUDUNFLARE_STEALTH_MODE=1
CLOUDUNFLARE_USER_AGENT_ROTATION=1
CLOUDUNFLARE_PROXY_ROTATION=1
CLOUDUNFLARE_RATE_LIMITING=1
CLOUDUNFLARE_EVASION_TECHNIQUES=1

# Rate Limiting Configuration
CLOUDUNFLARE_MAX_QPS=1000
CLOUDUNFLARE_BURST_SIZE=100
CLOUDUNFLARE_CIRCUIT_BREAKER_ENABLED=1
CLOUDUNFLARE_BACKOFF_ENABLED=1

# Reconnaissance Module Settings (when enabled)
RECON_MODULES_ENABLED=0
RECON_DNS_ZONE_TRANSFER=0
RECON_DNS_BRUTEFORCE=0
RECON_HTTP_BANNER_GRABBING=0
RECON_PORT_SCANNING=0
RECON_MAX_CONCURRENT=50
RECON_STEALTH_DELAY_MS=1000

# Volume Mount Paths (relative to docker-compose.yml)
CLOUDUNFLARE_CONFIG_PATH=./data/config
CLOUDUNFLARE_RESULTS_PATH=./data/results
CLOUDUNFLARE_RECON_RESULTS_PATH=./data/recon-results
CLOUDUNFLARE_LOGS_PATH=./data/logs
CLOUDUNFLARE_WORDLISTS_PATH=./data/wordlists
CLOUDUNFLARE_PROBES_PATH=./data/probes

# Network Configuration
CLOUDUNFLARE_NETWORK_SUBNET=172.20.0.0/16
CLOUDUNFLARE_NETWORK_GATEWAY=172.20.0.1
MONITORING_NETWORK_SUBNET=172.21.0.0/16
MONITORING_NETWORK_GATEWAY=172.21.0.1

# Container Resource Limits
MAIN_MEMORY_LIMIT=512M
MAIN_CPU_LIMIT=2.0
MAIN_MEMORY_RESERVATION=256M
MAIN_CPU_RESERVATION=1.0

RECON_MEMORY_LIMIT=1G
RECON_CPU_LIMIT=4.0
RECON_MEMORY_RESERVATION=512M
RECON_CPU_RESERVATION=2.0

# Monitoring and Logging
MONITORING_ENABLED=1
LOG_AGGREGATION_ENABLED=1
METRICS_COLLECTION_ENABLED=1
HEALTHCHECK_ENABLED=1

# External DNS Servers (comma-separated)
PRIMARY_DNS_SERVERS=1.1.1.1,8.8.8.8
SECONDARY_DNS_SERVERS=9.9.9.9,208.67.222.222
IPV6_DNS_SERVERS=2606:4700:4700::1111,2001:4860:4860::8888

# Portainer Integration
PORTAINER_STACK_NAME=cloudunflare
PORTAINER_ENDPOINT_ID=1
PORTAINER_ACCESS_TOKEN=

# Security and Secrets (DO NOT COMMIT REAL VALUES)
API_KEYS_ENABLED=0
SHODAN_API_KEY=your_shodan_api_key_here
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# SSL/TLS Configuration
SSL_VERIFY_PEER=1
SSL_VERIFY_HOST=1
SSL_CIPHER_LIST=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS
SSL_MIN_VERSION=TLSv1.2

# Proxy Configuration (if using proxies)
PROXY_ENABLED=0
HTTP_PROXY=
HTTPS_PROXY=
SOCKS5_PROXY=
PROXY_AUTH_ENABLED=0
PROXY_USERNAME=
PROXY_PASSWORD=

# Development and Debug Settings
DEBUG_MODE=0
VERBOSE_LOGGING=0
PERFORMANCE_METRICS=0
MEMORY_DEBUGGING=0
CORE_DUMPS_ENABLED=0

# Timezone Configuration
TZ=UTC

# Custom DNS-over-HTTPS Providers (pipe-separated)
CUSTOM_DOH_PROVIDERS=https://cloudflare-dns.com/dns-query|https://dns.google/dns-query|https://dns.quad9.net/dns-query

# Advanced Security Settings
CANARY_PROTECTION=1
STACK_PROTECTION=1
MEMORY_WIPING=1
EMERGENCY_CLEANUP=1
ANTI_DEBUG=1

# Container Naming
CONTAINER_NAME_PREFIX=cloudunflare
MAIN_CONTAINER_NAME=cloudunflare-main
RECON_CONTAINER_NAME=cloudunflare-recon
MONITOR_CONTAINER_NAME=cloudunflare-monitor
LOGS_CONTAINER_NAME=cloudunflare-logs