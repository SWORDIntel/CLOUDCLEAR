# CloudClear v2.0-Enhanced-Cloud - Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# Docker Deployment Configuration
# ============================================================================

# Build Configuration
BUILD_DATE=2025-11-18T00:00:00Z
BUILD_VERSION=2.0-Enhanced-Cloud
DOCKER_REGISTRY=your-registry.com/cloudclear

# Domain Configuration
CLOUDCLEAR_DOMAIN=cloudclear.local
CLOUDCLEAR_SUBDOMAIN=scan

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
MAX_CONCURRENT_SCANS=10
SECRET_KEY=cloudclear-secret-key-change-me-in-production

# Application Performance
CLOUDCLEAR_MAX_THREADS=50
CLOUDCLEAR_DNS_TIMEOUT=30
CLOUDCLEAR_HTTP_TIMEOUT=45
CLOUDCLEAR_CONNECTION_TIMEOUT=60

# Logging and Monitoring
CLOUDCLEAR_LOG_LEVEL=INFO
MONITORING_ENABLED=1
HEALTHCHECK_ENABLED=1

# Network Configuration
CLOUDCLEAR_NETWORK_SUBNET=172.25.0.0/16

# Container Resource Limits
API_MEMORY_LIMIT=1G
API_CPU_LIMIT=2.0
CADDY_MEMORY_LIMIT=256M
CADDY_CPU_LIMIT=0.5

# ============================================================================
# Security and Secrets (DO NOT COMMIT REAL VALUES)
# ============================================================================

# Intelligence Service API Keys
SHODAN_API_KEY=your_shodan_api_key_here
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ============================================================================
# Cloud Provider API Credentials
# ============================================================================

# Cloudflare API (for Cloudflare detection and services)
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_API_EMAIL=your_cloudflare_email_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Akamai EdgeGrid API (for property lookups and edge intelligence)
AKAMAI_CLIENT_TOKEN=your_akamai_client_token_here
AKAMAI_CLIENT_SECRET=your_akamai_client_secret_here
AKAMAI_ACCESS_TOKEN=your_akamai_access_token_here
AKAMAI_BASE_URL=https://akzz-XXXXXXXXXXXXXXXX-XXXXXXXXXXXXXXXX.luna.akamaiapis.net

# AWS API (for CloudFront, WAF, Shield, Route53 intelligence)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=

# Azure API (for Front Door, CDN, WAF intelligence)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Google Cloud Platform API (for Cloud CDN, Cloud Armor intelligence)
GCP_PROJECT_ID=your_gcp_project_id_here
GCP_SERVICE_ACCOUNT_KEY=your_gcp_service_account_key_json_here
GCP_LOCATION=us-central1

# Fastly API (for CDN and edge service intelligence)
FASTLY_API_KEY=your_fastly_api_key_here

# DigitalOcean API (for Spaces CDN and App Platform intelligence)
DIGITALOCEAN_API_TOKEN=your_digitalocean_token_here

# Oracle Cloud API (for CDN and WAF intelligence)
ORACLE_CLOUD_TENANCY_OCID=your_oracle_tenancy_ocid_here
ORACLE_CLOUD_USER_OCID=your_oracle_user_ocid_here
ORACLE_CLOUD_FINGERPRINT=your_oracle_fingerprint_here
ORACLE_CLOUD_PRIVATE_KEY_PATH=/path/to/oracle-key.pem

# Alibaba Cloud API (for CDN and Anti-DDoS intelligence)
ALIBABA_ACCESS_KEY_ID=your_alibaba_access_key_id_here
ALIBABA_ACCESS_KEY_SECRET=your_alibaba_access_key_secret_here
ALIBABA_REGION=cn-hangzhou

# Imperva API (for Incapsula CDN and WAF intelligence)
IMPERVA_API_ID=your_imperva_api_id_here
IMPERVA_API_KEY=your_imperva_api_key_here

# Sucuri API (for WAF and CDN intelligence)
SUCURI_API_KEY=your_sucuri_api_key_here
SUCURI_API_SECRET=your_sucuri_api_secret_here

# Stackpath API (for CDN and WAF intelligence)
STACKPATH_CLIENT_ID=your_stackpath_client_id_here
STACKPATH_CLIENT_SECRET=your_stackpath_client_secret_here
STACKPATH_STACK_ID=your_stackpath_stack_id_here

# ============================================================================
# SSL/TLS Configuration
# ============================================================================
SSL_VERIFY_PEER=1
SSL_VERIFY_HOST=1
SSL_CIPHER_LIST=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS
SSL_MIN_VERSION=TLSv1.2

# ============================================================================
# Proxy Configuration (optional)
# ============================================================================
PROXY_ENABLED=0
HTTP_PROXY=
HTTPS_PROXY=
SOCKS5_PROXY=
NO_PROXY=localhost,127.0.0.1

# ============================================================================
# Development and Debug Settings
# ============================================================================
DEBUG_MODE=0
VERBOSE_LOGGING=0
FLASK_DEBUG=0
FLASK_ENV=production

# ============================================================================
# Timezone Configuration
# ============================================================================
TZ=UTC

# ============================================================================
# Advanced Settings
# ============================================================================

# DNS Configuration
DNS_SERVERS=1.1.1.1,8.8.8.8,9.9.9.9
DNS_OVER_HTTPS=https://cloudflare-dns.com/dns-query

# Rate Limiting
RATE_LIMIT_ENABLED=1
RATE_LIMIT_PER_MINUTE=60

# Security Headers (handled by Caddy, but can be overridden)
ENABLE_HSTS=1
ENABLE_CSP=1
ENABLE_SECURITY_HEADERS=1